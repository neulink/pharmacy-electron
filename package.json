{
  "name": "pharmacy-electron",
  "version": "1.3.0",
  "description": "Neulink Pharmacy Desktop Application",
  "main": "main.cjs",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production electron-builder",
    "build:win": "cross-env NODE_ENV=production electron-builder --win",
    "build:mac": "cross-env NODE_ENV=production electron-builder --mac",
    "build:linux": "cross-env NODE_ENV=production electron-builder --linux",
    "build:publish": "cross-env NODE_ENV=production electron-builder --publish=always",
    "dist": "npm run build",
    "pack": "cross-env NODE_ENV=production electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "neulink",
    "pharmacy",
    "electron",
    "desktop"
  ],
  "author": {
    "name": "Neulink",
    "email": "rishi@neulink.cloud"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/neulink/pharmacy-electron.git"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^38.2.2",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.neulink.pharmacy",
    "productName": "Neulink Pharmacy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.cjs",
      "preload.cjs",
      "qz-tray-manager.cjs",
      "package.json"
    ],
    "extraMetadata": {
      "main": "main.cjs"
    },
    "publish": {
      "provider": "github",
      "owner": "neulink",
      "repo": "pharmacy-electron"
    },
    "mac": {
      "category": "public.app-category.medical",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-${arch}-setup.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office",
      "icon": "assets/icon.png",
      "maintainer": "rishi@neulink.cloud",
      "vendor": "Neulink",
      "synopsis": "Neulink Pharmacy Desktop Application",
      "description": "A cross-platform desktop application for Neulink Pharmacy management system",
      "desktop": {
        "Name": "Neulink Pharmacy",
        "Comment": "Pharmacy Management System",
        "Keywords": "pharmacy;medical;neulink;management;",
        "Category": "Office"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-${version}-setup.${ext}",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": false,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "ws": "^8.18.3"
  }
}
